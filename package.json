{
  "name": "appium-bdd",
  "version": "1.0.0",
  "description": "Appium BDD test framework with vendored engine",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "test": "node ./node_modules/@cucumber/cucumber/bin/cucumber-js --require lib/support/**/*.js --require lib/step-definitions/**/*.js --format json:reports/cucumber_report.json",
    "test:report": "node -e \"require('./lib/utils/report').generateHTMLReport()\"",
    "test:full": "npm test && npm run test:report",
    "check:prerequisites": "bash scripts/load-android-env.sh node scripts/check-prerequisites.js",
    "test:with-check": "npm run check:prerequisites && npm test",
    "setup:android-sdk": "bash scripts/setup-android-sdk.sh"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@nodebug/config": "2.1.0",
    "@nodebug/logger": "1.1.0",
    "chai": "4.3.6",
    "cucumber-html-reporter": "5.5.0",
    "date-fns": "2.30.0",
    "form-data": "4.0.0",
    "jsonfile": "6.1.0",
    "lodash": "4.17.21",
    "webdriver": "^9.9.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^4.3.8",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,yaml,yml,md,sh,groovy}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
